<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recipe_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="foody.jakzaizzat.com.foody.ui.recipe.RecipeName"
    android:animateLayoutChanges="false">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/RecipeName"
        android:fontFamily="sans-serif"
        android:singleLine="false"
        android:hint="Name of Recipe"
        android:background="?android:attr/textColorLinkInverse"
        android:textColor="@android:color/background_light"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColorHint="@android:color/background_light"/>

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RecipeName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/RecipeNameNext"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"/>
</RelativeLayout>
